type Link {
  id: ID! @id
  createdAt: DateTime! @createdAt
  description: String!
  url: String!
  postedBy: User
  votes: [Vote!]!
  comments: [Comment!]!
}

type Comment{
  id: ID! @id
  createdAt: DateTime! @createdAt
  text: String!
  postedBy: User
  link: Link
}


type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  links: [Link!]!
  votes: [Vote!]!
  comments: [Comment!]!
  picId: String
}

type Vote {
  id: ID! @id
  link: Link!
  user: User!
}
